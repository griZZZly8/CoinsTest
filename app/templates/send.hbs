<div class="col align-self-center">
  {{error-message error=error}}

  <h1>Send</h1>

  <div class="form-group">
    <label>Recipient</label>
    {{input class="form-control" placeholder="Recipient" value=recipient}}
  </div>

  <div class="form-group">
    <label>Amount</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">{{model.coin}}</span>
      </div>
      {{input class="form-control" placeholder="Amount" value=amount}}
    </div>
  </div>

  <div class="form-group">
    <label>Passphrase</label>
    {{input class="form-control" placeholder="Passphrase" value=passphrase}}
  </div>

  <button {{action "send" recipient amount}} class="btn btn-primary">Send</button>
</div>